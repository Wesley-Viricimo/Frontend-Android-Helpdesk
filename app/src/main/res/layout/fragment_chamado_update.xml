<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".ui.chamado.ChamadoUpdateFragmentUI">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atualizar chamado"
            android:fontFamily="@font/open_sans"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edtChamadoUpdateTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_hint"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/edtChamadoUpdateDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_hint"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"/>

        <Spinner
            android:id="@+id/spnChamadoUpdateCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spnChamadoUpdateTecnico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <Spinner
                    android:id="@+id/spnChamadoUpdateStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/container_edit_text_login"
                    android:backgroundTint="@color/login_input_text"
                    android:padding="15dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prioridade"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <Spinner
                    android:id="@+id/spnChamadoUpdatePrioridade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/container_edit_text_login"
                    android:backgroundTint="@color/login_input_text"
                    android:padding="15dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChamadoUpdateAtualizar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/botao_cadastro_custom"
                android:text="Atualizar"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnChamadoUpdateCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/botao_cancelar_custom"
                android:text="Cancelar"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbChamadoUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>