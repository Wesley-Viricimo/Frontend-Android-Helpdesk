<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivPessoaImage"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/open_sans"
        android:text="Id"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPessoaImage"
        app:layout_constraintTop_toTopOf="@id/ivPessoaImage" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Nome"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:fontFamily="@font/open_sans"
        app:layout_constraintEnd_toEndOf="@id/tvId"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintBottom_toTopOf="@id/tvEmail"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Email"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:textSize="12sp"
        android:fontFamily="@font/open_sans"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        app:layout_constraintBottom_toBottomOf="@id/ivPessoaImage"/>

    <TextView
        android:id="@+id/tvDataCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Data de cadastro"
        android:textSize="13sp"
        android:fontFamily="@font/open_sans"
        app:layout_constraintStart_toStartOf="@id/ivPessoaImage"
        app:layout_constraintTop_toBottomOf="@id/ivPessoaImage"/>



</androidx.constraintlayout.widget.ConstraintLayout>