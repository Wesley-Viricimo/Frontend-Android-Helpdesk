<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".ui.cliente.ClientesCreateFragmentUI">

    <LinearLayout
       android:layout_marginTop="60dp"
       android:layout_marginLeft="8dp"
       android:layout_marginRight="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Cadastro de cliente"
           android:fontFamily="@font/open_sans"
           android:textAllCaps="true"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/edtCadCliNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_hint"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/edtCadCliCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_hint"
            android:padding="15dp"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/edtCadCliEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_hint"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/edtCadCliSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:background="@drawable/container_edit_text_login"
            android:backgroundTint="@color/login_input_text"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_hint"
            android:padding="15dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCadCliCadastrar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/botao_cadastro_custom"
                android:text="Cadastrar"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnCadCliCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/botao_cancelar_custom"
                android:text="Cancelar"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbCadCli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        </LinearLayout>
   </LinearLayout>



</FrameLayout>